generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  tags        String[]
  image       String
  link        String
  repository  String?

  @@map("projects")
}

model Experience {
  id           String    @id @default(cuid())
  title        String
  company      String
  location     String
  locationType String
  startDate    DateTime
  endDate      DateTime?
  description  String
  skills       String[]

  @@map("experience")
}

model Education {
  id          String   @id @default(cuid())
  school      String
  course      String
  description String
  startDate   DateTime
  endDate     DateTime

  @@map("education")
}
